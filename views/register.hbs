<div class="row w-100">
    <div class="col-md-5 mx-auto">
        <p class="fs-1">Register</p>
        {{#if registerError}}
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <strong>Error!</strong> {{registerError}}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
        {{/if}}
        <form action="/register" method="post">
            <div class="d-flex">
                <div class="form-floating mb-3 w-50 me-3">
                    <input class="form-control" name="firstname" type="text" id="floatingInput"
                        placeholder="First name">
                    <label for="floatingInput">First name</label>
                </div>

                <div class="form-floating w-50 ">
                    <input type="text" class="form-control" name="lastname" id="floatingPassword"
                        placeholder="Last name">
                    <label for="floatingPassword">Last name</label>
                </div>
            </div>

            <div class="form-floating mb-3">
                <input class="form-control" name="email" type="email" id="floatingInput" placeholder="name@example.com">
                <label for="floatingInput">Email address</label>
            </div>

            <div class="form-floating">
                <input type="password" class="form-control" name="password" id="floatingPassword"
                    placeholder="Password">
                <label for="floatingPassword">Password</label>
            </div>
            <button type="submit" class="btn btn-primary mt-3">Submit</button>
        </form>
    </div>
    <div class="col-md-5">
        <img src="/sign.jpg" width="100%" alt="sign">
    </div>
</div>