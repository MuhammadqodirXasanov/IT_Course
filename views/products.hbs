<h1 class="text-center">My Products</h1>
{{#if myProducts.length}}
<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3 container mx-auto my-5">
    {{#each myProducts}}
    <div class="col">
        <div class="card shadow-sm">
            <img class="bd-placeholder-img card-img-top" src="{{image}}">
            <div class="card-body">
                <h4>{{title}}</h4>
                <p class="card-text">{{description}}</p>
                <div class="d-flex justify-content-between align-items-center">
                    <h6 class="text-decoration-underline">By {{firstLetterName user.firstName}}. {{user.lastName}}</h6>
                    <h5 class="text-end">Price: ${{price}}</h5>
                </div>
            </div>
        </div>
    </div>
    {{/each}}
</div>
{{else}}
<h5 class="mx-5 mt-5">No Products</h5>
{{/if}}