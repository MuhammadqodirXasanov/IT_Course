<div class="row w-100">
    <div class="col-md-5 mx-auto">
        <h1 class="pb-2">Add product</h1>
        {{#if addError}}
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <strong>Error!</strong> {{addError}}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
        {{/if}}
        <form action="/add-product" method="post">
            <div class="form-floating mb-3">
                <input class="form-control" name="title" type="text" id="floatingInput" placeholder="title">
                <label for="floatingInput">Title</label>
            </div>
            <div class="form-floating mb-3">
                <textarea type="text" class="form-control" name="description" id="floatingPassword"
                    placeholder="Description"></textarea>
                <label for="floatingPassword">Description</label>
            </div>
            <div class="form-floating">
                <textarea type="text" class="form-control" name="extraDesc" id="floatingPassword"
                    placeholder="extra description"></textarea>
                <label for="floatingPassword">Extra description</label>
            </div>
            <div class="form-floating mt-3">
                <input class="form-control" name="image" type="text" id="floatingInput" placeholder="image">
                <label for="floatingInput">Image</label>
            </div>
            <div class="input-group mb-3 mt-3">
                <span class="input-group-text bg-light" id="basic-addon1">$</span>
                <div class="form-floating">
                    <input type="number" class="form-control" name="price" placeholder="Price" aria-label="Price"
                        aria-describedby="basic-addon1" id="floatingInputGroup1">
                    <label for="floatingInputGroup1">Price</label>
                </div>
            </div>
            <button type="submit" class="btn btn-primary mt-2">Add Product</button>
        </form>
    </div>
    <div class='col-md-5'>
        <img src='/add.jpg' width='100%' alt='add' />
    </div>
</div>
